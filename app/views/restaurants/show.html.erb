<div class="restaurant-content">
  <div class="container">
    <h1 class="big-title"><%= @restaurant.name %></h1>
    <div class="row">
      <div class="col s12 m12 l8">
        <%= @restaurant.content.html_safe %>
      </div>
      <div class="col s12 m12 l4">
        <% @restaurant.restaurant_images.each do |img| %>
          <%= image_tag img.image.url(:normal), :width => "350", :class => "materialboxed right" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
