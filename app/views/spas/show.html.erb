<div class="spa-content">
  <div class="container">
    <h1 class="big-title"><%= @spa.name %></h1>
    <p>3 Hours: <%= number_to_currency(@spa.price) %></p>
    <a class="btn modal-trigger" href="#spa-booking-modal">Book now</a>
    <%= @spa.content.html_safe %>
  </div>
</div>
<div id="spa-booking-modal" class="modal service-booking" style="box-shadow: none !important">
  <div class="row">
    <form action="/spa-and-wellness/booking" method="POST">
      <div class="col s12">
        <div class="row">
          <h2 class="title center-align"><span>Choose your package</span></h2>
          <div class="input-field col s12 m6 l6">
            <i class="material-icons right">expand_more</i>
            <select class="spa none" id="spa" name="spa_booking[package]">
              <option value="1">1</option>
              <option value="2">2</option>
              <option value="3">3</option>
              <option value="4">4</option>
              <option value="5">5</option>
              <option value="6">6</option>
              <option value="7">7</option>
              <option value="8">8</option>
            </select>
          </div>
          <div class="input-field col s12 m6 l6">
            <input class="price" type="text" value="<%= number_to_currency(@spa.price) %>" disabled/>
            <input type="hidden" value="<%= @spa.name %>" name="spa_booking[name]"/>
          </div>
        </div>
      </div>

      <div class="col s12">
        <div class="row">
          <h2 class="title center-align"><span>Your information</span></h2>
          <% if current_user.present? %>
            <div class="col s12">
              <input type="checkbox" class="filled-in" id="filled-in-box">
              <label for="filled-in-box">Use information from your account</label>
            </div>
          <% end %>
          <div class="input-field col s12 m6 l6">
            <input type="text" placeholder="First name" name="spa_booking[first_name]"/>
          </div>
          <div class="input-field col s12 m6 l6">
            <input type="text" placeholder="Last name" name="spa_booking[last_name]"/>
          </div>
          <div class="input-field col s12 m6 l6">
            <input type="email" placeholder="Email" name="spa_booking[email]"/>
          </div>
          <div class="input-field col s12 m6 l6">
            <input type="text" placeholder="Phone number" name="spa_booking[phone_number]"/>
          </div>
          <div class="input-field col s12 m6 l6">
            <input type="text" placeholder="City" name="spa_booking[city]"/>
          </div>
          <div class="input-field col s12 m6 l6">
            <input type="text" placeholder="Address" name="spa_booking[address]"/>
          </div>
        </div>
      </div>
      <div class="col s12 center-align">
        <button class="btn">Submit</button>
      </div>
      <input name="utf8" type="hidden" value="âœ“">
