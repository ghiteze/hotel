<div class="web-location">
   <h1><%= @web_location %></h1>
  <%= link_to new_admins_reward_path, :class => "waves-effect waves-light btn right teal" do %>
    <i class="material-icons left">add</i> Add reward
  <% end %>
</div>
<div class="main-content">
  <div id="admin-introduction">
    <table class="highlight">
      <thead>
        <tr>
          <th>#</th>
          <th>Title</th>
          <th>#</th>
        </tr>
      </thead>
      <tbody>
      <% @rewards.each do |reward| %>
        <tr>
          <td><%= image_tag reward.image.url(:thumb) %></td>
          <td><%= link_to reward.title, reward_path(reward.slug), :target => "_blank" %></td>
          <td>
            <%= link_to "View", reward_path(reward.slug), :target => "_blank" %>
            <%= link_to "Edit", edit_admins_reward_path(reward) %>
            <%= link_to "Delete", admins_reward_path(reward), method: :delete, data: {confirm: 'Are you sure?'} %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
