<div class="web-location">
  <h1><%= @web_location %></h1>
</div>
<div class="main-content">

  <table class="striped">
    <thead>
      <tr>
        <th>#</th>
        <th>Name</th>
        <th>Subject</th>
        <th>Date</th>
        <th>#</th>
      </tr>
    </thead>
    <tbody>
      <% @tickets.each_with_index do |ticket, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= ticket.full_name %></td>
          <td><%= ticket.subject %></td>
          <td><%= ticket.created_at.strftime("%d-%m-%Y") %></td>
          <td>
            <%= link_to "View", admins_ticket_path(ticket) %>
            <%= link_to "Delete", admins_ticket_path(ticket), method: :delete, data: {confirm: 'Are you sure?'} %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>