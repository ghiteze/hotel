<div class="login-form">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="input-field">
      <%= f.email_field :email, autofocus: true, id: 'email', placeholder: 'Email' %>
    </div>

    <div class="input-field">
      <%= f.password_field :password, autocomplete: "off", id: 'password', placeholder: 'Password' %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="input-field">
        <%= f.check_box :remember_me, id: 'remember-me', :class => "filled-in" %>
        <%= f.label :remember_me, for: 'remember-me' %>
      </div>
    <% end -%>

    <div class="input-field">
      <%= f.button class: 'waves-effect waves-light btn' do %>
        <i class="material-icons center">vpn_key</i>
      <% end %>
    </div>

  <% end %>

  <%= render "admins/shared/links" %>
  
</div>