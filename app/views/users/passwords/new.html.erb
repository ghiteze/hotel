<div id="user-login-page">
  <div class="container">
    <h1 class="big-title">Forgot your password?</h1>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true %>
      </div>

      <div class="actions">
        <%= f.submit "Send me reset password instructions", :class => 'btn', :style => 'width: 100%;' %>
      </div>
    <% end %>
  </div>
</div>
