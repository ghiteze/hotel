          <label for="<%= "a_#{accommodation.id}"  %>"></label>
        </div>
        <div class="text">
          <h2><%= accommodation.name %></h2>
          <%= link_to t('main.detail'), accommodation_path(accommodation.slug), :target => "_blank", :class => "btn" %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="center-align">
    <button class="btn">Confirm the room</button>
